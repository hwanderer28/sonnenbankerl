# Database Configuration
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/sonnenbankerl
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=sonnenbankerl

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:8000

# External APIs
GEOSPHERE_API_KEY=your_key_here
GEOSPHERE_API_URL=https://dataset.api.hub.geosphere.at/

# Environment
ENVIRONMENT=development  # development, staging, production

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Caching
WEATHER_CACHE_TTL=600  # seconds (10 minutes)

# Precomputation
PARALLEL_WORKERS=4
DSM_RESOLUTION=1  # meters

# Traefik Configuration (Production only)
DOMAIN=api.sonnenbankerl.com
TRAEFIK_NETWORK=traefik  # Your Traefik Docker network name
TRAEFIK_ENTRYPOINT=websecure  # Typically 'websecure' for HTTPS
CERT_RESOLVER=letsencrypt  # Your Let's Encrypt certificate resolver name
